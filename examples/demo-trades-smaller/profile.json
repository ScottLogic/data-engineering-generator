{
  "schemaVersion": "0.10",
  "fields": [
    {
      "name": "tradeId",
      "type": "integer",
      "nullable": false,
      "unique": true
    },
    {
      "name": "stock",
      "type": "string",
      "nullable": false
    },
    {
      "name": "side",
      "type": "string",
      "nullable": false
    },
    {
      "name": "tradePrice",
      "type": "decimal",
      "nullable": false
    },
    {
      "name": "volume",
      "type": "integer",
      "nullable": false
    },
    {
      "name": "tradeDatetime",
      "type": "datetime",
      "nullable": false
    }
  ],
  "rules": [
    {
      "rule": "tradeId",
      "constraints": [
        { "field": "tradeId", "is": "greaterThanOrEqualTo", "value": 10000 },
        { "field": "tradeId", "is": "lessThanOrEqualTo", "value": 99999 }
      ]
    },
    {
      "rule": "stock",
      "constraints": [
        { "field": "stock", "is": "inSet", "file": "examples/demo-trades/stockCodes.csv" }
      ]
    },
    {
      "rule": "side",
      "constraints": [
        { "field": "side", "is": "inSet", "values": [ "BUY", "SELL" ] }
      ]
    },
    {
      "rule": "tradePrice",
      "constraints": [
        { "field": "tradePrice", "is": "granularTo", "value": 0.01 },
        { "field": "tradePrice", "is": "greaterThan", "value": 140.0 },
        { "field": "tradePrice", "is": "lessThan", "value": 150.0 }
      ]
    },
    {
      "rule": "volume",
      "constraints": [
        { "field": "volume", "is": "greaterThanOrEqualTo", "value": 1 },
        { "field": "volume", "is": "lessThanOrEqualTo", "value": 200 }
      ]
    },
    {
      "rule": "tradeDatetime",
      "constraints": [
        { "field": "tradeDatetime", "is": "after", "value": "2019-09-02T09:30:00.000" },
        { "field": "tradeDatetime", "is": "before", "value": "2019-09-02T16:30:00.000" }
      ]
    }
  ]
}