{
  "schemaVersion": "0.10",
  "fields": [
    {
      "name": "first_name",
      "type": "string",
      "nullable": false
    }
  ],
  "rules": [
    {
      "constraints": [
        {
          "field": "first_name",
          "is": "matchingRegex",
          "value": "(Joh?n|Mar[yk])"
        },
        {
          "field": "first_name",
          "is": "matchingRegex",
          "value": "M.*"
        },
        {
          "not": {
            "field": "first_name",
            "is": "equalTo",
            "value": "Mary"
          }
        }
      ]
    }
  ]
}